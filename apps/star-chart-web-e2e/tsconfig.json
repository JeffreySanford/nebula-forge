{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "target": "es2022",
    "sourceMap": false,
    "outDir": "../../dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node", "playwright"]
  },
  "include": ["src/**/*.ts", "playwright.config.ts"]
}
